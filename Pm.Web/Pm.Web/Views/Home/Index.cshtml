@model Pm.Web.Models.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4 divBlock">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p>
            <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
        </p>
    </div>
    <div class="col-md-4 divBlock">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC
        </p>
        <p>
            <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
        </p>
    </div>
    <div class="col-md-4 divBlock">
        <h2>Getting started</h2>
        <p>
            ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
            enables a clean separation of concerns and gives you full control over markup
            for enjoyable, agile development.
        </p>
        <p>
            <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a>
        </p>
    </div>
    @foreach (var item in Model.Blocks) {
        <div class="col-md-4 divBlock">
            <h2>@item.Title</h2>
            <p>@item.Text</p>
            @if (!string.IsNullOrEmpty(item.Link)) {
                <p>
                    <a class="btn btn-default" href="@item.Link">Learn more &raquo;</a>
                </p>
            }
        </div>
    }
</div>

@section css{
    <style>
        .divBlock {
            height: 200px;
        }
    </style>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $(".divBlock").find("p:first").dotdotdot({
                height: 80
            });
        });
    </script>
}